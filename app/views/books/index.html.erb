<h1> All Books </h1>



<div>
<% @books.each do |book| %>

  <li><%= book.title %>   [Average Review: <%= book.reviews.average_review%> Stars]</li>
  <li>Number of Reviews:  <%= book.reviews.count %>  </li>
  <% book.authors.each do |author| %>
    <li><%= author.name %></li>
  <% end %>
  <li><%= book.pages %> Pages</li>
  <li>Published in <%= book.year %></li>

  <p><img src= "<%= book.image_url %>"</img></p>
  <% end %>
</div>
