<html>
<head>
  <LINK rel=stylesheet type="text/css" href="/authors_index.css">
</head>
<body>

<div class="topnav">
  <a href="/books">Books</a>
  <a class="active" href="/authors">Authors</a>
  <a href="/users">Users</a>
  <%= link_to("Add A New Book", new_book_path) %>
</div>


<h1 align = "center"> All Authors </h1>
<div class = "grid">
<% @authors.each do |author| %>
<div class = "info">
    <h2 align="center"> <%=link_to(author.name, author_path(author))%> </h2>
    <h6 align = "center">
    <% author.books.each do |book|%>
      <img width= 100px src= "<%=book.image_url%>"/>
    <% end %>
  </div>
<% end %>
</div>
</body>
</html>
