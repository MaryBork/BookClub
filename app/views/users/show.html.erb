<html>
<head>
  <LINK rel=stylesheet type="text/css" href="/user_index.css">
</head>
<body>

  <div class = "topnav">
    <a href="/books">Books</a>
    <a href="/authors">Authors</a>
    <a href="/users">Users</a>
    <%= link_to("Add A New Book", new_book_path) %>
    <div align = "right" id="user_reviews">
      <select onchange = "location = this.value;">
        <option> ---------- </option>
        <option value="/users/<%=@user.id%>?sort=newest">New to Old</option>
        <option value="/users/<%=@user.id%>?sort=oldest">Old to New</option>
      </select>
    </div>
  </div>

<div id="user_name" class = "header">
  <h1 align="center"><%= @user.name %> </h1>
</div>

<div class = "user-grid">
  <% if @reviews %>
    <% @reviews.each do |review| %>
      <div class = "info">
        <h2 align = "left">Reviewed <%= link_to(review.book.title, book_path(review.book)) %></h2>
        <%= review.title%></h2>
        <h3 align = "left">Rating:<%=review.score%></h3>
        <h3 align = "left">"<%=review.description%>"</h3>
      </div>
    <% end %>
  <% else %> No Reviews
<% end %>
</div>
</div>
</body>
</html>
